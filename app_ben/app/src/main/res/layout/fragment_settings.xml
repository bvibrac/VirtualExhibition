<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vibrac_b.virtualexhibition.SettingsFragment">

    <RelativeLayout android:id="@+id/content_settings"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.example.vibrac_b.virtualexhibition.Settings">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/notification"
            android:layout_marginTop="20sp"
            android:text="Notification"
            android:textSize="22dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Let allow the application to send you notifiction about exibition around you, new exibition by the artist you following"
            android:layout_below="@id/notification"
            android:textStyle="italic"
            android:id="@+id/textnotif"
            android:textSize="15dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Public"
            android:text="Public Profil"
            android:textSize="22sp"
            android:layout_marginTop="70dp"
            android:layout_below="@+id/notification"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:text="Set your profil public, private or on demand to let the user following what are you visiting, which exibition do you have created if you are an artist"
            android:id="@+id/textprofil"
            android:textSize="15sp"
            android:layout_below="@id/Public"
            android:layout_alignParentStart="true" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/switchNotif"
            android:layout_alignTop="@id/notification"
            android:layout_alignParentEnd="true" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/switchProf"
            android:layout_alignTop="@+id/Public"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>


</FrameLayout>
